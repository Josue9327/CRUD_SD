<%-include('partials/_header');-%>

<div class="container mt -5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="cardbody">
                    <form action="/update/<%-data.id-%>" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%-data.nombre-%>" placeholder="Nombre" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidoPaterno" value="<%-data.apellidoPaterno-%>" placeholder="Apellido paterno" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellidoMaterno" value="<%-data.apellidoMaterno-%>" placeholder="Apellido Materno" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="grupo" value="<%-data.grupo-%>" placeholder="Grupo" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="escuela" value="<%-data.escuela-%>" placeholder="Escuela" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Actualizar alumno
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%-include('partials/_footer');-%>